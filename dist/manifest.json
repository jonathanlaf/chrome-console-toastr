{
  "manifest_version": 2,

  "name": "Chrome Toastr Console",
  "description": "Add Toastr notifications in browser and intercept console messages and show them in toastr.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "console.png",
   "default_popup": "settings.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["app.js"],
      "css": ["app.css"]
    }
  ],
 
 "permissions": [
   "tabs",
   "http://*/",
   "https://*/"
   ]
}